@model List<Data.Domain.Entities.Train>
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetRoute</h2>


<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
<table class="table">
    <thead>
        <tr>
            <th>
                No
            </th>
            <th>
                From
            </th>
            <th>
                To
            </th>
            <th>
                Departure
            </th>
            <th>
                Arrival
            </th>
        </tr>
    </thead>
<tbody>
    @foreach (var train in Model)
    {
            <tr>
                
                <td>
                   <a asp-area="" asp-controller="Trains" asp-action="Details" asp-route-officialNumber=@train.OfficialNumber>@(train.Category + train.OfficialNumber)</a>
                </td>
                <td>
                    @train.OriginStationName
                </td>
                <td>
                    @train.DestinationStationName
                </td>
                <td>
                    @String.Format(new DateTime(TimeSpan.FromSeconds(train.DepartureTime).Ticks).ToString("HH:mm"))
                </td>
                <td>
                    @String.Format(new DateTime(TimeSpan.FromSeconds(train.ArrivalTime).Ticks).ToString("HH:mm"))
                </td>
            </tr>
    }
    </tbody>
    </table>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
